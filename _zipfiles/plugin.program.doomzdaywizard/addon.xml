<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.doomzdaywizard" name="[B][COLOR gold]Doomzday[/COLOR][/B] Wizard" version="1.2.8" provider-name="DD Team">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Doomzday Wizard</summary>
        <description lang="en">Doomzday Wizard gets you access to the latest Doomzday Builds.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>
